{
  "name": "redux-needs",
  "version": "1.0.0-beta.3",
  "description": "Wrapping everyday data to your containers in need",
  "main": "lib/index.js",
  "repository": "git@github.com:LUKKIEN/redux-needs.git",
  "contributors": [
    "Janneke Janssen <j.janssen@lukkien.com>",
    "Thomas Vervest <thomas@squarewolf.nl>"
  ],
  "license": "BSD-3-Clause",
  "keywords": [
    "frontend",
    "react",
    "redux",
    "dependencies",
    "needs",
    "async"
  ],
  "jest": {
    "cacheDirectory": "./node_modules/.jest-cache",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "roots": [
      "<rootDir>/tests/"
    ],
    "testMatch": [
      "**/tests/**/*.js"
    ]
  },
  "scripts": {
    "build": "yarn run clean && babel src --out-dir lib && cp README.md ./lib",
    "clean": "rimraf lib",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepush": "yarn test && yarn lint",
    "release": "release",
    "release:next": "release --preid beta --tag next",
    "test": "jest",
    "test:ci": "yarn run test && codecov"
  },
  "release-script": {
    "altPkgRootFolder": "lib",
    "defaultDryRun": "true"
  },
  "dependencies": {
    "prop-types": "^15.5.10"
  },
  "peerDependencies": {
    "react": "15.5.x",
    "react-redux": "5.x.x",
    "redux": "3.7.x"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "codecov": "^2.2.0",
    "enzyme": "^2.8.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-test-renderer": "^15.6.1",
    "redux": "^3.7.0",
    "redux-mock-store": "^1.2.3",
    "release-script": "^1.0.2"
  }
}
